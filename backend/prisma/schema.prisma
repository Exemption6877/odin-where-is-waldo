datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Score {
    id Int @id @default(autoincrement())
    time DateTime
    createdAt DateTime @default(now())
    username  String 
    gameboard Gameboard @relation(fields: [gameboardId], references: [id])
    gameboardId Int
}

model Gameboard {
    id Int @id @default(autoincrement())
    title String
    image String
    preview String
    author String
    source String
    scores Score[]
    objectives Objective[]
}

model Objective{
    id Int @id @default(autoincrement())
    title String
    image String
    topLeftX Float
    topLeftY Float 
    BottomRightX Float
    BottomRightY Float
    gameboard Gameboard @relation(fields: [gameboardId], references: [id])
    gameboardId Int
}

